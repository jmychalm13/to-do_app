

<section class="vh-100">
  <div class="contain py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-10">
      
        <div class="card align-items-center">
          <div class="card-body p-5">
            <label for="add_task" class="form-label">
            <button class="btn btn-info ms-2">
              <a href="/todos/new">New Todo</a>
            </button>
            </label>
          </div>
        </div>

      </div>
      <div class="row">
        <ul class="list-group">
            <div class="container text-center">
              <div class="row">
                  <% @todos.each do |todo| %>
                    <div class="col-4">
                      <li class="list-group-item d-flex align-items-center border-0 mb-2 rounded"><%= todo.title %></li>
                      <%# todo: change date format to make it more readable %>
                      <p><%= todo.deadline %></p>
                      <a href="/todos/<%= todo.id %>">More info</a>
                    </div>
                  <% end %>
              </div>
            </div>
          </ul>
      </div>
    </div>
  </div>
</section>