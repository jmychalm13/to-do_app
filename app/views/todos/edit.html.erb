<h1>Edit Todo</h1>
<form method="post" action="/todos/<%= @todo.id %>">
  <input type="hidden" name="_method" value="patch" autocomplete="off">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <div>
    <label>Title </label>
    <input type="text" name="todo[title]" value="<%= @todo.title %>">
  </div>
  <div>
    <label>Description </label>
    <input type="text" name="todo[description]" value="<%= @todo.description %>">
  </div>
  <div>
    <label>Deadline </label>
    <input type="date" name="todo[deadline]" value="<%= @todo.deadline %>">
  </div>
  <div>
    <label>Status </label>
    <input type="checkbox"  name="completed" value="<%= @todo.completed %>" id="completed">
    <label for="completed">Complete</label><br>
    <input type="checkbox" name="not_completed" id="not_completed" value="Incomplete">
    <label for="not_completed">Incomplete</label>
  </div>
  <div>
    <input type="submit" value="Update Todo">
  </div>
</form>